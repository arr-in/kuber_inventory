# MongoDB (required)
MONGO_URL=mongodb://localhost:27017
# For Atlas: mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=kuber_inventory

# JWT secret (required in production)
JWT_SECRET_KEY=your-secret-key-change-in-production

# AI Chatbot - at least one required for chatbot to work
# Prefer GEMINI_API_KEY if both are set
GEMINI_API_KEY=
OPENROUTER_API_KEY=

# Optional: OpenRouter model (default: google/gemini-2-flash:free)
# OPENROUTER_MODEL=google/gemini-2-flash:free

# SEED_SECRET - required for POST /api/seed (run once after deploy)
# SEED_SECRET=your-random-secret

# CORS - comma-separated allowed origins (default: *)
# Example: https://myapp.vercel.app,https://myapp.netlify.app
CORS_ORIGINS=*
